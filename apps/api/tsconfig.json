{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "removeComments": true,
    "incremental": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "useDefineForClassFields": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": false,
    "strictPropertyInitialization": false,

    "skipLibCheck": true
  }
}