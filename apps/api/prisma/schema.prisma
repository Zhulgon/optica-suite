generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String
  documentNumber String  @unique
  phone         String?
  email         String?
  occupation    String?
  birthDate     DateTime?
  createdAt     DateTime @default(now())

  @@index([documentNumber])
}